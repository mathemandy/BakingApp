<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ng.tselebro.bakingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".recipe.MainActivity"
            android:label="Recipe">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".recipeDetails.RecipeDetails"
            android:label="Nuella Pie"
            android:parentActivityName=".recipe.MainActivity"
            >
        </activity>
        <provider
            android:authorities="com.ng.tselebro.bakingapp.data.local.provider"
            android:name=".data.local.generated.RecipeProvider"
            android:exported="false"/>

    </application>

</manifest>